@{
    Layout = "Admin/_Master";
}

<div class="card">
    @if (ViewBag.Message != null) {
        <div class="alert alert-info"><p>@ViewBag.Message</p></div>
    }
    <div class="card-header">
        <h3>Products</h3>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model) {
                        <tr>
                            <th scope="row">@product.ProductId</th>
                            <td>@product.Name</td>
                            <td>@product.CategoryName</td>
                            <td><img style="width: 90px; height: 40px; object-fit: cover;" src="@product.Image" alt="" srcset=""></td>
                            <td>@product.Price</td>
                            <td>@product.Quantity</td>
                            <td>@product.Active</td>
                            <td>
                                <a asp-controller="Product" asp-action="Edit" asp-route-productId="@product.ProductId" class="btn btn-primary">Edit</a>
                                <button data-id="@product.ProductId" type="button" class="btn btn-danger delete-btn">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Script {
    <script src="~/admin/js/remove.js"></script>
    <script>
        deleteRow("Product")
    </script>
}